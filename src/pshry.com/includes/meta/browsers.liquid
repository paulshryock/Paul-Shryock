<!-- Force IE 8/9/10 to use its latest rendering engine -->
<meta http-equiv="x-ua-compatible" content="ie=edge">

<!-- Chrome: Add to home screen -->
<meta name="mobile-web-app-capable" content="yes">

<!-- Safari: Enable standalone (full-screen) mode -->
<meta name="apple-mobile-web-app-capable" content="yes">

<!-- Safari: Status bar appearance -->
<meta name="apple-mobile-web-app-status-bar-style" content="black">

<!-- 360 Browser: Select rendering engine order -->
<meta name="renderer" content="webkit|ie-comp|ie-stand">

<!--
	QQ Mobile Browser: Document will be displayed in "application mode"
	(fullscreen, etc.)
-->
<meta name="x5-page-mode" content="app">

<!--
	UC Mobile Browser: Document will be displayed in "application mode"
	(fullscreen, forbidding gesture, etc.)
-->
<meta name="browsermode" content="application">
