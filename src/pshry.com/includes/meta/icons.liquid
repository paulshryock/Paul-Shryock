<!-- Touch icon for iOS 2.0+ and Android 2.1+ -->
<link rel="apple-touch-icon-precomposed" href="{{ site.favicon }}-180.png">

<!-- IE 10 Metro tile icon -->
<meta name="msapplication-TileColor" content="{{ site.colors.white }}">
<meta name="msapplication-TileImage" content="{{ site.favicon }}-size.png">

<!-- IE 11 Tile for Windows 8.1 Start Screen -->
<meta name="application-name" content="{{ site.name }}">
<meta name="msapplication-config" content="/img/favicon/browserconfig.xml" />

<!-- Apple touch icons -->
{%- assign appleSizes = '180,152,120,76' | split: ',' %}
{%- for size in appleSizes %}
<link
	rel="apple-touch-icon"
	href="{{ site.favicon }}-{{ size }}.png"
	sizes="{{ size }}x{{ size }}"
	type="image/png"
>
{%- endfor %}

<!-- Favicons targeted to other sizes -->
{%- assign sizes = '32,128,152,180,192,196' | split: ',' %}
{%- for size in sizes %}
<link
	rel="icon"
	href="{{ site.favicon }}-{{ size }}.png"
	sizes="{{ size }}x{{ size }}"
	type="image/png"
>
{%- endfor %}

<!-- Favicon Chrome for Android -->
<link rel="shortcut icon" sizes="196x196" href="{{ site.favicon }}-196.png">

<!--
	Important: The SVG file must be a single layer and the viewBox attribute must
	be set to "0 0 16 16".
-->
<link
	rel="mask-icon"
	href="{{ site.favicon }}.svg"
	color="{{ site.colors.primary }}"
>
