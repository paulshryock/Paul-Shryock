{% for script in scripts %}
<script src="{{ script.src }}"
	{%- if script.async %} async{% endif %}
	{%- if script.legacy == false %}
	{%- unless script.type == "module" or script.defer == false %} defer
	{%- endunless %}
	{%- endif %}
	{%- unless script.type or script.legacy == false %} type="module"
	{%- endunless %}
	{%- if script.type %} type="{{ script.type }}"{% endif %}></script>
{%- unless script.legacy == false %}
<script src="{{ script.legacy }}"
	{%- if script.async %} async{% endif %}
	{%- unless script.type == "module" or script.defer == false %} defer
	{%- endunless %}
	{%- if script.type %} type="{{ script.type }}"{% endif %} nomodule></script>
{%- endunless %}
{% endfor %}
