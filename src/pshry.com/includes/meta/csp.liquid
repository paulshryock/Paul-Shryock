{%- unless env.isProduction %}
{%- if site.csp %}
<!--
	Allows control over where resources are loaded from. Place as early in the
	<head> as possible, as the tag only applies to resources that are declared
	after it.
-->
<meta http-equiv="Content-Security-Policy" content="{{ site.csp }}">
{%- endif %}
{%- endunless %}
